{% extends 'base.html.twig' %}

{% block title %}Current Avatar's members{% endblock %}

{% block body %}
    <h1>Current Avatar's members</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Picture</th>
                <th>Instrument</th>
                <th>External link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for band in bands %}
            <tr>
                <td>{{ band.Name }}</td>
                <td><img src="{{ band.Picture }}" alt="Picture of {{ band.Name }}" width="320px"</td>
                <td>{{ band.Instrument }}</td>
                <td><a href="{{ band.Wikilink }}">Link</a></td>
                <td>
                    <a href="{{ path('band_show', {'id': band.id}) }}">show</a>
                    <a href="{{ path('band_edit', {'id': band.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('band_new') }}">Create new</a>
{% endblock %}
