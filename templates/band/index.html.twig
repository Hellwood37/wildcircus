{% extends 'base.html.twig' %}

{% block title %}Current Avatar's members{% endblock %}

{% block body %}
    <h1>Current Avatar's members</h1>

        {% for band in bands %}
            <br>
            <div class="card bg-warning col-xs-12 col-sm-6 col-lg-4" style="width: 18rem;">
                <img class="card-img-top" src="{{ band.Picture }}" alt="Picture of {{ band.Name }}" width="250px">
                <div class="card-body">
                    <h5 class="card-title">{{ band.Name }}</h5>
                    <p class="card-text">Instrument: {{ band.Instrument }}</p>
                    <a href="{{ path('band_show', {'id': band.id}) }}">show</a>
                    <a href="{{ path('band_edit', {'id': band.id}) }}">edit</a>
                </div>
            </div>
            <br>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
    <button type="button" class="btn-lg btn-warning"><a href="{{ path('band_new') }}">Create new</a></button>
{% endblock %}
