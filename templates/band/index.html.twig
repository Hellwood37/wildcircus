{% extends 'base.html.twig' %}

{% block title %}Band index{% endblock %}

{% block body %}
    <h1>Band index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Instrument</th>
                <th>Wikilink</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for band in bands %}
            <tr>
                <td>{{ band.id }}</td>
                <td>{{ band.Name }}</td>
                <td>{{ band.Picture }}</td>
                <td>{{ band.Instrument }}</td>
                <td>{{ band.wikilink }}</td>
                <td>
                    <a href="{{ path('band_show', {'id': band.id}) }}">show</a>
                    <a href="{{ path('band_edit', {'id': band.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('band_new') }}">Create new</a>
{% endblock %}
